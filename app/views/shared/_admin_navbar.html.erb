<div class="admin-sidebar" style="width: 210px; height: 100vh; background-color: #212529; position: fixed; top: 0; left: 0; padding-top: 20px; box-shadow: 2px 0 5px rgba(0,0,0,0.1); z-index: 1000; overflow-y: auto;">
  <div style="padding: 20px; color: #d4af37; font-size: 1.7rem; font-family: 'Cinzel', serif; font-weight: bold; text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);">
    Swift Cart
  </div>

  <ul class="nav flex-column" style="list-style-type: none; padding: 0; margin: 0;">
    <li class="nav-item" style="width: 100%;">
      <%= link_to admin_index_path, class: 'nav-link', style: 'display: flex; align-items: center; padding: 10px 20px; font-size: 16px; color: #ffffff; text-decoration: none;' do %>
        <i class="fas fa-tachometer-alt" style="margin-right: 10px;"></i> Dashboard
      <% end %>
    </li>
    <li class="nav-item" style="width: 100%;">
      <%= link_to admin_orders_path, class: 'nav-link', style: 'display: flex; align-items: center; padding: 10px 20px; font-size: 16px; color: #ffffff; text-decoration: none;' do %>
        <i class="fas fa-shopping-cart" style="margin-right: 10px;"></i> Orders
      <% end %>
    </li>
    <li class="nav-item" style="width: 100%;">
      <%= link_to admin_categories_path, class: 'nav-link', style: 'display: flex; align-items: center; padding: 10px 20px; font-size: 16px; color: #ffffff; text-decoration: none;' do %>
        <i class="fas fa-list-alt" style="margin-right: 10px;"></i> Categories
      <% end %>
    </li>
    <li class="nav-item" style="width: 100%;">
      <%= link_to admin_products_path, class: 'nav-link', style: 'display: flex; align-items: center; padding: 10px 20px; font-size: 16px; color: #ffffff; text-decoration: none;' do %>
        <i class="fas fa-boxes" style="margin-right: 10px;"></i> Products
      <% end %>
    </li>
    <li class="nav-item" style="width: 100%;">
      <%= link_to '#', class: 'nav-link', style: 'display: flex; align-items: center; padding: 10px 20px; font-size: 16px; color: #ffffff; text-decoration: none;' do %>
        <i class="fas fa-cogs" style="margin-right: 10px;"></i> Settings
      <% end %>
    </li>
    <li class="nav-item" style="width: 100%;">
      <%= button_to destroy_admin_session_path, method: :delete, class: 'nav-link', style: 'display: flex; align-items: center; padding: 10px 20px; font-size: 16px; color: #ffffff; text-decoration: none;' do %>

      
        <i class="fas fa-sign-out-alt" style="margin-right: 10px;"></i> Logout
      <% end %>
    </li>
  </ul>
</div>
