<div class="container-fluid" style="margin-left: 210px; padding-top: 20px; max-width: calc(100% - 210px);">
  <h1 style="font-family: 'Cinzel', serif; color: #d4af37;">Orders</h1>

  <div style="padding-bottom: 20px;">
    <%= link_to 'New Order', new_admin_order_path, class: 'btn btn-primary', style: 'background-color: #d4af37; border-color: #d4af37; color: #343a40;' %>
  </div>

  <div style="padding-top: 20px;">
    <table class="table table-striped" style="font-family: 'Arial', sans-serif; color: #ffffff; background-color: #343a40; border: 1px solid #d4af37;">
      <thead>
        <tr>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Customer Email</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Total Price</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Order Date</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Shipping Address</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Payment Method</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Status</th>
          <th colspan="3" style="color: #d4af37; border: 1px solid #d4af37;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td><%= order.customer_email %></td>
            <td><%= number_to_currency(order.total_price, unit: "â‚¹") %></td>
            <td><%= order.order_date.strftime("%Y-%m-%d %H:%M") if order.order_date %></td>
            <td><%= order.shipping_address %></td>
            <td><%= order.payment_method %></td>
            <td>
              <% status_class = case order.status
                               when 'completed'
                                 'badge bg-success'
                               when 'canceled'
                                 'badge bg-danger'
                               else
                                 'badge bg-warning'
                               end %>
              <span class="<%= status_class %>" style="padding: 2px 5px; border-radius: 3px;"><%= order.status.capitalize %></span>
            </td>
            <td><%= link_to 'Show', admin_order_path(order), class: 'btn btn-info btn-sm' %></td>
            <td><%= link_to 'Edit', edit_admin_order_path(order), class: 'btn btn-warning btn-sm' %></td>
            <td><%= button_to 'Destroy', admin_order_path(order), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
