<div class="container-fluid" style="margin-left: 210px; padding-top: 20px; max-width: calc(100% - 210px);">
  <h1 style="font-family: 'Cinzel', serif; color: #d4af37;">Categories</h1>

  <div style="padding-top: 20px; padding-bottom: 20px;">
    <%= link_to 'New Category', new_admin_category_path, class: 'btn btn-primary', style: 'background-color: #d4af37; border-color: #d4af37; color: #343a40;' %>
  </div>

  <div style="padding-top: 20px;">
    <p style="color: green;"><%= notice %></p>
  </div>

  <div style="padding-top: 20px;">
    <table class="table table-striped" style="font-family: 'Arial', sans-serif; color: #ffffff; background-color: #343a40; border: 1px solid #d4af37;">
      <thead>
        <tr>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Name</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Image</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Parent Category</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @admin_categories.each do |category| %>
          <tr>
            <td><%= category.name %></td>
            <td><%= image_tag(category.image.variant(:thumb), style: 'border-radius: 50%; width: 50px; height: 50px; object-fit: cover;') %></td>
            <td><%= category.parent_category ? category.parent_category.name : 'None' %></td>
            <td>
              <%= link_to 'Show', admin_category_path(category), class: 'btn btn-info btn-sm' %> |
              <%= link_to 'Edit', edit_admin_category_path(category), class: 'btn btn-warning btn-sm' %> 
                            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
