<div id="<%= dom_id category %>">
  <p>
    <strong>Name:</strong>
    <%= category.name %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= category.description %>
  </p>

  <p>
    <strong>Parent:</strong>
    <%= category.parent_id %>
  </p>

  <p>
    <strong>Image:</strong>
    <%= image_tag(category.image.variant(:thumb))%>
  </p>


</div>
