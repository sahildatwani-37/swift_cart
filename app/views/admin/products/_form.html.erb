<%= form_with(model: [:admin, @product], local: true) do |form| %>
  <% if @product.errors.any? %>
    <div id="error_explanation" style="color: red; margin-left: 210px; padding-top: 20px;">
      <h2 style="font-family: 'Cinzel', serif; color: #d4af37;">
        <%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:
      </h2>
      <ul>
        <% @product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container-fluid" style="margin-left: 210px; padding-top: 20px; max-width: calc(100% - 210px);">
    <div class="row">
      <div class="col-md-6">
        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :title, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.text_field :title, class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" %>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :description, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.text_area :description, class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" %>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :price, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.number_field :price, step: '0.01', class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" %>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :category_id, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.collection_select :category_id, Category.all, :id, :name, { prompt: 'Select Category' }, { class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" } %>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :colors, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.text_field :colors, value: @product.colors.join(', '), class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" %>
          <small>Enter colors as comma-separated values.</small>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :sizes, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.text_field :sizes, value: @product.sizes.join(', '), class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" %>
          <small>Enter sizes as comma-separated values.</small>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.label :images, style: "display: block; color: #d4af37; font-family: 'Cinzel', serif;" %>
          <%= form.file_field :images, multiple: true, class: 'form-control', style: "font-family: 'Arial', sans-serif; border: 1px solid #d4af37; padding: 10px;" %>
        </div>

        <div class="form-group" style="padding-top: 20px;">
          <%= form.submit class: 'btn btn-primary', style: 'background-color: #d4af37; border-color: #d4af37; color: #343a40; font-family: Arial, sans-serif;' %>
        </div>
      </div>
    </div>
  </div>
<% end %>