<div class="container-fluid" style="margin-left: 210px; padding-top: 20px; max-width: calc(100% - 210px);">
  <h1 style="font-family: 'Cinzel', serif; color: #d4af37;">Products</h1>

  <div style="padding-top: 20px; padding-bottom: 20px;">
    <%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary', style: 'background-color: #d4af37; border-color: #d4af37; color: #343a40;'%>
  </div>

  
  <div class="table-responsive" style="padding-top: 20px;">
    <table class="table table-striped" style="font-family: 'Arial', sans-serif; color: #ffffff; background-color: #343a40; border: 1px solid #d4af37;">
      <thead>
        <tr>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Title</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Image</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Description</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Price</th>
          <th style="color: #d4af37; border: 1px solid #d4af37;">Category</th>
          <th colspan="3" style="color: #d4af37; border: 1px solid #d4af37;">Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @products.each do |product| %>
          <tr>
            <td><%= product.title %></td>
            <td><%= product.images.any? ? image_tag(product.images.first.variant(:thumb), style: 'border-radius: 50%; width: 50px; height: 50px; object-fit: cover;') : image_tag("https://via.placeholder.com/50", style: 'border-radius: 50%; width: 50px; height: 50px; object-fit: cover;') %></td>
            <td><%= product.description %></td>
            <td><%= number_to_currency(product.price, unit: "â‚¹") %></td>
            <td><%= product.category.name %></td>
            <td><%= link_to 'Show', admin_product_path(product), class: 'btn btn-info btn-sm' %></td>
            <td><%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-warning btn-sm' %></td>
            <td><%= button_to 'Destroy', admin_product_path(product), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
